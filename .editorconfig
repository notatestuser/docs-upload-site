# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
max_line_length = 80
trim_trailing_whitespace = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[Makefile]
max_line_length = 0
indent_style = tab
indent_size = 4

[COMMIT_EDITMSG]
max_line_length = 0
